@model Data.StockManagement.ShortDescription


<h3>Editar descripcion corta</h3>

@using (Html.BeginForm("Edit", "ShortDescriptions", new { @id = '/' }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ShortDescriptionId)
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.ShortTextDescription, new { htmlAttributes = new { @class = "form-control", @id = "description-editor" } })
                @Html.ValidationMessageFor(model => model.ShortTextDescription, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group text-lg-right">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Editar" class="btn pull-right btn-warning" />
                </div>
            </div>
    </div>
}