@model Data.StockManagement.Color


<h3>Editar color</h3>

@using (Html.BeginForm("Edit", "Colors", new { @id = '/' }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ColorId)
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.ColorDescription, new { htmlAttributes = new { @class = "form-control", @id = "description-editor" } })
                @Html.ValidationMessageFor(model => model.ColorDescription, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group text-lg-right">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn pull-right btn-warning" />
            </div>
        </div>
    </div>
}